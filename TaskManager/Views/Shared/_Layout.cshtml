<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Главная", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li id="projectList"><a href="#">Проекты</a></li>
                    <li id="listUser"><a href="#">Пользователи</a></li>
                </ul>

                <form class="navbar-form navbar-left">
                    <div class="form-group">
                        <input id="name" class="form-control" type="text" name="name" placeholder="поиск" />
                    </div>
                    <button id="search" type="submit" class="btn btn-default">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </form>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <div id="loading" class="modals">
            <div class="modals-content">
                <img title="Идет загрузка..."
                     src="@Url.Content("~/Content/img/loading.gif")" />
            </div>
        </div>

        <div id="results"></div>
        <div id="taskRes"></div>

        <div class="modal fade">
            <div class="modals-dialog modals-window"></div>
        </div>

        <hr />
        @*<footer>
                <p>&copy; @DateTime.Now.Year</p>
            </footer>*@
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("script", required: false)

</body>
</html>
