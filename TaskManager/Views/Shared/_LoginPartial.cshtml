@using Microsoft.AspNet.Identity
@using TaskManager.DAL
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @{
                    using (DataContext context = new DataContext())
                    {
                        var id = context.Users.AsParallel().Where(x => x.Login == User.Identity.Name).FirstOrDefault().UserDataId;

                        @Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName(), "EditUserData", "Account", new { id = id }, htmlAttributes: new { title = "Будущие настройки" })
                    }
                }
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Выход</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
