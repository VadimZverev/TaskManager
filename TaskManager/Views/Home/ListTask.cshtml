@model IEnumerable<TaskManager.Models.ListTaskViewModel>

@{
    Layout = null;
}

<h2>@ViewBag.Project. Список задач: </h2>

<p>
    <span title="Новая задача" id="createTask" class="ico-tasklistCreate icon-button" data-id="@ViewBag.ProjectId"></span>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Priority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateClose)
        </th>
        <th>
            Действия
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateClose)
            </td>
            <td>
                <span hidden="hidden" id="idTask" data-id=@item.Id></span>
                <span title="Редактировать задачу" id="TaskEdit" class="ico-edit icon-button"></span>
                <span title="Удалить задачу" id="TaskDelete" class="ico-delete icon-button"></span>
            </td>
        </tr>
    }

</table>
