@model IEnumerable<TaskManager.Models.ListUserViewModel>

@{
    ViewBag.Title = "Список пользователей";
}

<h2>Список пользователей:</h2>

<p>
    <span title="Создать нового пользователя" id="сreateUser" class="ico-createUser icon-button"></span>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th>
            Действия
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <span id="idUser" hidden="hidden" data-id="@item.Id"></span>
                <span id="userDataDetails" title="Подробнее" class="ico-details icon-button"></span>
                <span id="editUserData" title="Редактировать" class="ico-edit icon-button"></span>
                <span id="deleteUser" title="Редактировать" class="ico-delete icon-button"></span>

            </td>
        </tr>
    }

</table>